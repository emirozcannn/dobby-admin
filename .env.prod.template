# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values

# Domain & SSL
DOMAIN=your-domain.com
DOCKER_USERNAME=your-dockerhub-username

# Database Configuration
DB_NAME=dobby_cafe_prod
DB_USER=dobby_user
DB_PASSWORD=super-secure-database-password-here

# JWT Configuration
JWT_SECRET=super-secure-jwt-secret-key-for-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload (Optional)
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Backup Configuration (Optional)
BACKUP_SCHEDULE=0 2 * * *
S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
